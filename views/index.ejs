<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library System</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center">Library System</h1>

        <!-- Borrow and Return Forms -->
        <div class="row mt-4">
            <div class="col-md-6">
                <h2>Borrow Book</h2>
                <form action="/borrow" method="POST" class="form-inline">
                    <div class="form-group mb-2">
                        <label for="memberCode" class="sr-only">Member Code</label>
                        <input type="text" class="form-control" id="memberCode" name="memberCode" placeholder="Member Code" required>
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        <label for="bookCode" class="sr-only">Book Code</label>
                        <input type="text" class="form-control" id="bookCode" name="bookCode" placeholder="Book Code" required>
                    </div>
                    <button type="submit" class="btn btn-primary mb-2">Borrow</button>
                </form>
            </div>

            <div class="col-md-6">
                <h2>Return Book</h2>
                <form action="/return" method="POST" class="form-inline">
                    <div class="form-group mb-2">
                        <label for="memberCodeReturn" class="sr-only">Member Code</label>
                        <input type="text" class="form-control" id="memberCodeReturn" name="memberCode" placeholder="Member Code" required>
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        <label for="bookCodeReturn" class="sr-only">Book Code</label>
                        <input type="text" class="form-control" id="bookCodeReturn" name="bookCode" placeholder="Book Code" required>
                    </div>
                    <button type="submit" class="btn btn-success mb-2">Return</button>
                </form>
            </div>
        </div>

        <!-- Books and Members List -->
        <div class="row mt-4">
            <div class="col-md-6">
                <h2>Books</h2>
                <ul class="list-group">
                    <% books.forEach(function(book) { %>
                        <li class="list-group-item">
                            <strong><%= book.code %> <%= book.title %></strong> by <%= book.author %> 
                            <br>
                            <span>Stock: <%= book.stock %></span> 
                            <br>
                            <span>Borrowed By: <%= book.borrowedBy ? book.borrowedBy : 'Available' %></span>
                        </li>
                    <% }); %>
                </ul>
            </div>

            <div class="col-md-6">
                <h2>Members</h2>
                <ul class="list-group">
                    <% members.forEach(function(member) { %>
                        <li class="list-group-item">
                            <strong><%= member.code %> <%= member.name %></strong>
                            <br>
                            <span>Books Borrowed: <%= member.borrowedBooks.length %></span>
                            <br>
                            <span>Penalty Until: <%= member.penaltyUntil ? member.penaltyUntil : 'None' %></span>
                        </li>
                    <% }); %>
                </ul>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies (optional) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
